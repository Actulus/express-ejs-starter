<div class="chat-popup" id="new-chat-popup">
  <div class="chat-popup-content">
    <h2>Create New Chat</h2>
    <form>
      <label for="chat-name">Chat Name:</label>
      <input
        type="text"
        id="chat-name"
        name="chat-name"
        placeholder="Enter chat name..."
      />
      <button type="submit">Create</button>
    </form>
    <button class="close-btn" onclick="closeChatPopup()">Close</button>
  </div>
</div>
